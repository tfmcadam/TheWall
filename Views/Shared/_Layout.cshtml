@model LogUser
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - The Wall</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TheWall.styles.css" asp-append-version="true" />
</head>

<body class="img">
    <header>
        <nav class="backColor navbar navbar-expand-sm navbar-toggleable-sm box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-dark display-3" asp-area="" asp-controller="Home" asp-action="Index">The
                    Wall</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Message"
                                asp-action="Messages">Messages</a>
                        </li>
                    </ul>
                    <form asp-action="LoginUser" asp-controller="Home" method="post">
                        <div class="d-flex gap-1">
                            <input class="form-control" asp-for="LEmail" placeholder="Email" name="LEmail">
                            <span asp-validation-for="LEmail" class="text-danger"></span>
                            <span asp-validation-for="LPassword" class="text-danger"></span>
                            <input class="form-control"
                            type="password" placeholder="Password" asp-for="LPassword">
                            <button type="submit" class="btn">Login</button>
                        </div>
                    </form>

                    @* <a href="user/images">Image Trial</a>
                    <button class="btn" onclick="document.getElementById('logreg').style.display='block'">Login</button>
                    <div id="logreg" class="modal">
                        @await Html.PartialAsync("_login")
                    </div> *@
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer">
        <div class="container text-dark">
            &copy; 2023 - The Wall
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
