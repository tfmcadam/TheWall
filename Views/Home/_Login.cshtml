@model LogUser

<div>

    <form class="logReg animate" id="FormId"asp-action="LoginUser" asp-controller="Home" method="post">
        <span onclick="document.getElementById('logreg').style.display='none'" class="close"
            title="Close Modal">&times;</span>
        <div class="d-flex justify-content-center align-items-center gap-3">
            <div class="imgcontainer">
                <img class="userImageSingle" src="../UserImage.jpg" alt="Avatar" class="avatar">
            </div>
            <h1 class="display-4">Login</h1>
        </div>

        <div>
            <label asp-for="LEmail"></label>
            <input asp-for="LEmail" class="form-control">
        </div>
        <div>
            <label asp-for="LPassword"></label>
            <input type="password" asp-for="LPassword" class="form-control">
        </div>
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <input type="submit" value="Login" class="btn btn-dark m-3">
                <button class="btn btn-danger" type="button"
                    onclick="document.getElementById('logreg').style.display='none'" class="cancelbtn">Cancel</button>
            </div>
            <span class="psw">Forgot <a href="#">password?</a></span>
        </div>
        @* Validations for email and Password *@
        <div>

            <span asp-validation-for="LEmail" id="validation" class="validation text-danger"></span>
        </div>
    </form>
</div>